<!DOCTYPE html>
<html>
  <head>
    <title>Message board</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <nav class='nav'>
        <h1>Welcome to the message board!</h1>
      </nav>
      <section class='messages'>
        <a href='/new' class="button-add">Add a new message</a>
        <% messages.forEach(message => { %>
          <div class="container">
            <div class="top">
              <h2><%= message.title %></h2>
              <p><%= message.description %> </p>
            </div>
            <div class="bottom">
              <h3 class="user"><%= message.user %></h3>
              <span class="date"><%= message.added %></span>
            </div>
          </div>
          <% }); %>
      </section>
    </main>
  </body>
</html>
